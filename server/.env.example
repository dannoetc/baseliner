# Baseliner Server (example)
# Copy to server/.env for local dev (do not commit real secrets).

ENV=dev
DATABASE_URL=postgresql+psycopg://baseliner:baseliner@localhost:5432/baseliner
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# MVP auth secrets (dev defaults)
BASELINER_TOKEN_PEPPER=change-me-to-a-long-random-string
BASELINER_ADMIN_KEY=change-me-too

# --- Request hardening (Issue #23) ---
# Request size limits (bytes)
MAX_REQUEST_BODY_BYTES_DEFAULT=1000000
MAX_REQUEST_BODY_BYTES_DEVICE_REPORTS=10000000

# Rate limiting for POST /api/v1/device/reports (token bucket)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REPORTS_PER_MINUTE=60
RATE_LIMIT_REPORTS_BURST=10
RATE_LIMIT_REPORTS_IP_PER_MINUTE=60
RATE_LIMIT_REPORTS_IP_BURST=10
